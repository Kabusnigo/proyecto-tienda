  <script>
  const slides = ['One', 'Two', 'Three', 'Four'];
  let counter = 0;

  setInterval(() => {
    // Incrementamos el contador y lo reiniciamos cuando pasa el √∫ltimo slide
    counter = (counter + 1) % slides.length;
    // Marcamos como seleccionado el radio correspondiente
    document.getElementById('slide' + slides[counter]).checked = true;
  }, 4000);
</script>
<script>
  function cerrarModal() {
    document.getElementById('bienvenida-modal').style.display = 'none';
  }


  window.addEventListener('load', () => {
    document.getElementById('bienvenida-modal').style.display = 'flex';
  });
</script>
